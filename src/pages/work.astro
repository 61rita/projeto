---
import BaseLayout from '../layouts/BaseLayout.astro'
const Post1 = await Astro.glob('../pages/posts/post-1.md');
const Post2 = await Astro.glob('../pages/posts/post-2.md');
const Post3 = await Astro.glob('../pages/posts/post-3.md');
const pageTitle = "Work";
---
<BaseLayout pageTitle={pageTitle}>
  <h1>Work</h1>

  <h2>Featured Projects</h2>

  <p>Feel free to take a look at my work and read through my case studies, 
    see my final designs and test out the protoypes Iâ€™ve built.
  </p>

  <div class="row">

    {Post1.map((post) => 
      <div class="column">
        <div class="container">
          <a href={post.url}>
            <img src={post.frontmatter.image.src} width="100%" style="border-radius: 25px;">
              <div class="caption">
  		          <h3>Design Jobs - UX/UI Case Study</h3>
  		          <p>Building a website for designers to discover which job is most suitable for them</p>
  	          </div>
          </a>
        </div>
      </div>)}

    {Post2.map((post) => 
      <div class="column">
        <div class="container">
          <a href={post.url}>
            <img src={post.frontmatter.image.src} width="100%" style="border-radius: 25px;">
              <div class="caption">
  		          <h3>Design System - UI Case Study</h3>
  		          <p>Making a complete Design System for an E-Commerce Platform Website</p>
  	          </div>
          </a>
        </div>
      </div>)}

    {Post3.map((post) => 
      <div class="container">
        <a href={post.url}>
          <img src={post.frontmatter.image.src} width="100%" style="border-radius: 25px;">
            <div class="caption-2">
  		        <h3>Designing a New WhatsApp Feature - Case Study</h3>
  		        <p>Design a completely new feature for an already existing app</p>
  	        </div>
        </a>
      </div>
      )}

    </div>

</BaseLayout>